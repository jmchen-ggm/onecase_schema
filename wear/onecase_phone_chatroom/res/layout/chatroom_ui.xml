<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/start_chatroom_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/start_chatroom_activity" />

    <Button
        android:id="@+id/start_fitness_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_chatroom_btn"
        android:layout_centerHorizontal="true"
        android:text="@string/start_fitness_activity" />
    
    <Button
        android:id="@+id/send_notification_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_fitness_btn"
        android:layout_centerHorizontal="true"
        android:text="@string/send_notification" />

</RelativeLayout>